{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:articles_id": {
    "description": "serves an array of article base on id",
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:articles_id/comments": {
    "description": "serves an array of comments base on id of articles",
    "exampleResponse": {
      "articles": [
        {
          "comment_id": 162,
          "body": "Et suscipit maxime sit sunt consequuntur consequatur fugiat molestias. Et quis enim vero.",
          "article_id": 2,
          "author": "grumpy19",
          "votes": 14,
          "created_at": "2020-10-03T18:22:00.000Z"
        }
      ]
    }
  },
  "POST /api/articles/:articles_id/comments": {
    "description": "create posted comment ",
    "queries": ["username", "body"],

    "exampleResponse": {
      "comments": [
       {
	"comment_id": 309,
	"body": "testtesttesttest",
	"article_id": 1,
	"author": "dimatest",
	"votes": 0,
	"created_at": "2024-01-16T11:33:48.049Z"
}
      ]
    }
  },
  "PATCH /api/articles/:articles_id": {
    "description": "update an article by article_id",
    "requestBody": {
      "description": "An object containing the properties to update an article",
      "requiredFields": [
        {
          "name": "inc_votes",
          "type": "number",
          "description": "The amount by which the votes property in the database should be updated. Positive values for increment, negative values for decrement."
        }
      ],
      "example": {
        "inc_votes": 1
      }
    },
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 1, 
        "comment_count": 6
      }
    }
  },
    "DELETE /api/comments/:comment_id": {
      "description": "Deletes a comment based on the provided comment_id.",
      "exampleResponse": {
        "deletedComment": {
          "comment_id": 123,
          "body": "This is a deleted comment.",
          "article_id": 456,
          "author": "exampleUser",
          "votes": 0,
          "created_at": "2024-01-16T12:34:56.789Z"
        }
      },
      "errors": [
        {
          "status": 400,
          "msg": "Invalid or missing comment_id"
        },
        {
          "status": 404,
          "msg": "Comment not found"
        }
      ]
    }
  }

